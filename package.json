{
  "name": "video-summarizer-extension",
  "version": "1.0.0",
  "description": "Chrome extension for AI-powered video summarization using transcripts and visual analysis",
  "main": "manifest.json",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "start": "next start",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "cross-env ANALYZE=true next build",
    "bundle-analyzer": "@next/bundle-analyzer npm run build",
    "audit:security": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "clean:all": "rm -rf .next out dist node_modules package-lock.json && npm install",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "deploy": "npm run build && npm run export",
    "export": "next export"
  },
  "keywords": [
    "chrome-extension",
    "video-summarization",
    "ai",
    "transcript-analysis",
    "youtube"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^30.0.5"
  },
  "dependencies": {
    "opencv.js": "^4.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}